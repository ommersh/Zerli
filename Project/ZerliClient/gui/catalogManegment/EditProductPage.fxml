            <Button fx:id="saveBnt" layoutX="508.0" layoutY="616.0" mnemonicParsing="false" onAction="#saveChangesOfProduct" prefHeight="51.0" prefWidth="185.0" style="-fx-background-color: #2f41a7;" text="Save" textFill="#f4f2f2">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="backBtn" layoutX="21.0" layoutY="616.0" mnemonicParsing="false" onAction="#goBack" prefHeight="51.0" prefWidth="185.0" style="-fx-background-color: #2f41a7;" text="Back" textFill="#f4f2f2">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Button>
            <Label fx:id="erorrLabel" layoutX="850.0" layoutY="477.0" prefHeight="108.0" prefWidth="274.0">
               <font>
                  <Font name="System Bold Italic" size="22.0" />
