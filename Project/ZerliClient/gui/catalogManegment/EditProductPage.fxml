                  <Font name="System Bold Italic" size="35.0" />
               </font>
            </Label>
            <TextField fx:id="nameOfProductTxt" layoutX="229.0" layoutY="160.0" prefHeight="30.0" prefWidth="195.0" />
            <TextField fx:id="priceTxt" layoutX="229.0" layoutY="208.0" prefHeight="30.0" prefWidth="195.0" />
            <Label layoutX="72.0" layoutY="160.0" text="Product Name:">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
            <Label layoutX="77.0" layoutY="208.0" text="Product Price:">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="colorTxt" layoutX="229.0" layoutY="311.0" prefHeight="30.0" prefWidth="195.0" />
