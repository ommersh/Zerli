<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="catalogManegment.EditProductContorller">
   <children>
      <Pane fx:id="editProductPane" prefHeight="695.0" prefWidth="1200.0">
         <children>
            <Label fx:id="titleLAbel" alignment="CENTER" layoutX="383.0" layoutY="26.0" prefHeight="51.0" prefWidth="435.0" text="Edit Product:" textAlignment="CENTER">
